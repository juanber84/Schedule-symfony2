{% extends 'Juanber84ScheduleBundle::layout.html.twig' %}

{% block body -%}
    <h4 class="text book inline"><span class="icon exchange color theme "></span> Activities edit</h4>       

    <form action="{{ path('schedule_activitys_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <br>
        <ul class="record_actions">
            <li>
                <button type="submit">Edit</button>
            </li>
    </form>


    <li>
        <a class="button secondary"  href="{{ path('schedule_activitys') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('schedule_activitys_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
