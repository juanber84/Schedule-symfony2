{% extends 'Juanber84ScheduleBundle::layout.html.twig' %}

{% block body -%}
    <h4 class="text book inline"><span class="icon folder-close color theme "></span> Projects edit</h4>

    <form action="{{ path('admin_projects_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <ul class="record_actions">
        <li>
            <button type="submit">Edit</button>
        </li>
    </form>


    <li>
        <a class="button secondary"  href="{{ path('admin_projects') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_projects_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
