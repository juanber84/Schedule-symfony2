{% extends 'Juanber84ScheduleBundle::layout.html.twig' %}

{% block body -%}
    <div class="column_10">
        <div class="column_9">
    <h4 class="text book inline"><span class="icon folder-close color theme "></span> Projects </h4>  
        </div>
    </div>

    <div class="column_10">
        <div class="column_9">
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ entity.details }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_projects') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_projects_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_projects_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
        </div>
    </div>
{% endblock %}
